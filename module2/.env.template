# Meeting Analysis Workflow - Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# =============================================================================
# API CREDENTIALS
# =============================================================================

# OpenAI API Key (required for transcription and analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Recall.ai API Key (required for meeting recording)
RECALL_AI_API_KEY=your_recall_ai_api_key_here

# =============================================================================
# GOOGLE CLOUD CREDENTIALS
# =============================================================================

# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_id_here
GOOGLE_SHEETS_CREDENTIAL_FILE=path/to/service-account-key.json

# Google Calendar Configuration  
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_CALENDAR_CREDENTIAL_FILE=path/to/oauth2-credentials.json

# =============================================================================
# N8N WORKFLOW CONFIGURATION
# =============================================================================

# N8N Instance URL
N8N_BASE_URL=http://localhost:5678

# Webhook Security (recommended for production)
N8N_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# STREAMLIT APPLICATION SETTINGS
# =============================================================================

# Streamlit Server Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=mp3,wav,m4a,txt,pdf

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

# SSL Configuration (production only)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Database Configuration (if using external storage)
DATABASE_URL=your_database_url_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/meeting_workflow.log

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Container Registry (for Docker deployment)
CONTAINER_REGISTRY=your_registry_url
IMAGE_TAG=latest

# Health Check URLs
HEALTH_CHECK_URL=http://localhost:8501/health
WEBHOOK_HEALTH_URL=http://localhost:5678/webhook/health